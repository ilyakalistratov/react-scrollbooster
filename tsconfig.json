{
    "compilerOptions": {
        "jsx": "react",
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2017"
        ],
        "declaration": true,
        "rootDir": "src",
        "outDir": "lib",
        "downlevelIteration": true,
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": false,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
    },
    "exclude": [
        "lib",
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}
